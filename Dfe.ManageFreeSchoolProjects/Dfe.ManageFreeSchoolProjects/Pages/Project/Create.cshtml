@page
@using Dfe.ManageFreeSchoolProjects.Pages.Project;
@model CreateProjectModel
@{
}


<div class="text-center">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h2 class="govuk-heading-l govuk-!-margin-bottom-2">Create Project</h2>
            <div class="app-task-list">
                <form class="govuk-form-group" method="POST" id="create-project-form">
                    <div class="govuk-form-group">
                        <label asp-for="ProjectID" class="govuk-label">Project ID</label>
                        <input asp-for="ProjectID" class="govuk-input" type="text" maxlength="100" required data-testid="project-id-input">
                    </div>
                    <div class="govuk-form-group">
                        <label asp-for="SchoolName" class="govuk-label">School Name</label>
                        <input asp-for="SchoolName" class="govuk-input" type="text" maxlength="100" required data-testid="school-name-input">
                    </div>
                    <div class="govuk-form-group">
                        <label asp-for="ApplicationNumber" class="govuk-label">Application Number</label>
                        <input asp-for="ApplicationNumber" class="govuk-input" type="text" maxlength="100" required data-testid="application-number-input">
                    </div>
                    <div class="govuk-form-group">
                        <label asp-for="ApplicationWave" class="govuk-label">Application Wave</label>
                        <input asp-for="ApplicationWave" class="govuk-input" type="text" maxlength="100" required data-testid="application-wave-input">
                    </div>
                    <div class="govuk-button-group">
                        <button data-prevent-double-click="true"
                                class="govuk-button govuk-!-margin-top-6"
                                data-module="govuk-button"
                                role="button"
                                id="create"
                                name="action"
                                value="create"
                                data-testid="create-project-button">
                            Create
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
