@page "/projects/{projectId}/pupil-numbers/capacity-when-full/edit"
@model Dfe.ManageFreeSchoolProjects.Pages.Project.PupilNumbers.EditCapacityWhenFullModel
@{
}

<div class="govuk-width-container">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">

            <h1 class="govuk-heading-xl">
                <span class="govuk-caption-l">St George's Primary School</span>
                Edit Capacity when full
            </h1>

            <form class="form" method="post">

                <table class="govuk-table mfsp-pupil-numbers__table-container mfsp-pupil-numbers__table-container--small">
                    <thead class="govuk-table__head">
                        <tr class="govuk-table__row">
                            <th scope="col" class="govuk-table__header col1">School group</th>
                            <th scope="col" class="govuk-table__header">Capacity</th>
                        </tr>
                    </thead>
                    <tbody class="govuk-table__body">
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">Nursery</td>
                            <td class="govuk-table__cell">
                                <div class="govuk-form-group">
                                    <govuk-number-input id="nursery" name="nursery" asp-for="@Model.Nursery" />
                                </div>
                            </td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">Reception to year 6</td>
                            <td class="govuk-table__cell">
                                <div class="govuk-form-group">
                                    <govuk-number-input id="reception-to-year6" name="reception-to-year6" asp-for="@Model.ReceptionToYear6" />
                                </div>
                            </td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">Year 7 to year 11</td>
                            <td class="govuk-table__cell">
                                <div class="govuk-form-group">
                                    <govuk-number-input id="year7-to-year11" name="year7-to-year11" asp-for="@Model.Year7ToYear11" />
                                </div>
                            </td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">Year 12 to year 14</td>
                            <td class="govuk-table__cell">
                                <div class="govuk-form-group">
                                    <govuk-number-input id="year12-to-year14" name="year12-to-year14" asp-for="@Model.Year12ToYear14" />
                                </div>
                            </td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">Special educational needs (specialist resource provision)</td>
                            <td class="govuk-table__cell">
                                <div class="govuk-form-group">
                                    <govuk-number-input id="special-education-needs" name="special-education-needs" asp-for="@Model.SpecialEducationNeeds" />
                                </div>
                            </td>
                        </tr>
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">Alternative provision (specialist resource provision)</td>
                            <td class="govuk-table__cell">
                                <div class="govuk-form-group">
                                    <govuk-number-input id="alternative-provision" name="alternative-provision" asp-for="@Model.AlternativeProvision" />
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <button class="govuk-button" data-module="govuk-button">
                    Save and continue
                </button>
            </form>
        </div>
    </div>
</div>

