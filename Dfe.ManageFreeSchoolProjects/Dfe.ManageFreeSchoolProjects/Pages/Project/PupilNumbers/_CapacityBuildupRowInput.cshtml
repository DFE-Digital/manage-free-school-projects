                                 name="@idPrefix-sixth-year-field"
                                 label="@Model.SchoolYear capacity buildup sixth year"
                                 test-id="@idPrefix-sixth-year-field" />
    </td>
    <td class="govuk-table__cell">
        <govuk-number-input-cell asp-for="@Model.CapacityBuildupRow.SeventhYear"
