@using Dfe.ManageFreeSchoolProjects.Pages.Project.PupilNumbers
@model Dfe.ManageFreeSchoolProjects.Pages.Project.PupilNumbers.CapacityRowBuildupInputViewModel
@{
    var idPrefix = Model.SchoolYear.Replace(" ", string.Empty).ToLower();
}

