@page "/projects/{projectId}/pupil-numbers/recruitment-and-viability/edit"
@using Dfe.ManageFreeSchoolProjects.Constants
@model Dfe.ManageFreeSchoolProjects.Pages.Project.PupilNumbers.EditRecruitmentAndViabilityModel
@{
    var backlink = string.Format(RouteConstants.ViewPupilNumbers, Model.ProjectId);
    ViewData["Title"] = $"Edit Recruitment and viability - {Model.SchoolName}";
}

@section BeforeMain {
    <div role="navigation" class="govuk-width-container">
        <a href=@backlink class="govuk-back-link">Back</a>
    </div>
}

<partial name="_ErrorSummary" />


<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

        <h1 class="govuk-heading-xl">
            <span class="govuk-caption-l" data-testid="school-name">@Model.SchoolName</span>
            Edit Recruitment and viability
        </h1>

        <form class="form" method="post">

            <table class="govuk-table govuk-table__border--full govuk-table--small">
                <caption class="govuk-table__caption govuk-table__caption--m govuk-visually-hidden">Edit Recruitment and viability</caption>
                <thead class="govuk-table__head">
                    <tr class="govuk-table__row">
                        <th scope="col" class="govuk-table__header mfsp-pupil-numbers-table__first-header">School year</th>
                        <th scope="col" class="govuk-table__header">Minimum viable number (MVN) for first year</th>
                        <th scope="col" class="govuk-table__header">Applications received</th>
                        <th scope="col" class="govuk-table__header">Accepted offers</th>
                    </tr>
                </thead>
                <tbody class="govuk-table__body">
                    <tr class="govuk-table__row">
                        <td class="govuk-table__cell">Reception to year 6</td>
                        <td class="govuk-table__cell">
                            <govuk-number-input-cell asp-for="@Model.ReceptionToYear6.MinimumViableNumber"
                                                     test-id="reception-to-year6-mvn" />
                        </td>
                        <td class="govuk-table__cell">
                            <govuk-number-input-cell asp-for="@Model.ReceptionToYear6.ApplicationsReceived"
                                                     test-id="reception-to-year6-applications-received" />
                        </td>
                        <td class="govuk-table__cell">
                            <govuk-number-input-cell asp-for="@Model.ReceptionToYear6.AcceptedOffers"
                            test-id="reception-to-year6-accepted-offers" />
                        </td>
                    </tr>
                    <tr class="govuk-table__row">
                        <td class="govuk-table__cell">Year 7 to year 11</td>
                        <td class="govuk-table__cell">
                            <govuk-number-input-cell asp-for="@Model.Year7ToYear11.MinimumViableNumber"
                                                     test-id="year7-to-year11-mvn" />
                        </td>
                        <td class="govuk-table__cell">
                            <govuk-number-input-cell asp-for="@Model.Year7ToYear11.ApplicationsReceived"
                                                     test-id="year7-to-year11-applications-received" />
                        </td>
                        <td class="govuk-table__cell">
                            <govuk-number-input-cell asp-for="@Model.Year7ToYear11.AcceptedOffers"
                            test-id="year7-to-year11-accepted-offers" />
                        </td>
                    </tr>
                    <tr class="govuk-table__row">
                        <td class="govuk-table__cell">Year 12 to year 14</td>
                        <td class="govuk-table__cell">
                            <govuk-number-input-cell asp-for="@Model.Year12ToYear14.MinimumViableNumber"
                                                     test-id="year12-to-year14-mvn" />
                        </td>
                        <td class="govuk-table__cell">
                            <govuk-number-input-cell asp-for="@Model.Year12ToYear14.ApplicationsReceived"
                                                     test-id="year12-to-year14-applications-received" />
                        </td>
                        <td class="govuk-table__cell">
                            <govuk-number-input-cell asp-for="@Model.Year12ToYear14.AcceptedOffers"
                            test-id="year12-to-year14-accepted-offers" />
                        </td>
                    </tr>
                </tbody>
            </table>
            <button class="govuk-button" data-module="govuk-button" data-testid="save-and-continue">
                Save and continue
            </button>

            @Html.HiddenFor(m => m.SchoolName)
        </form>
    </div>
</div>
