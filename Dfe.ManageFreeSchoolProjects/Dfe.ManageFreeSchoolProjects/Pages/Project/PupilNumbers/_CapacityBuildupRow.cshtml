@model Dfe.ManageFreeSchoolProjects.Pages.Project.PupilNumbers.CapacityBuildupRowViewModel

@{
    var idPrefix = Model.Label.ToLower().Replace(" ", string.Empty);
}

<tr class="govuk-table__row">
    <td class="govuk-table__cell">
        @if (Model.BoldLabel)
        {
            <strong>@Model.Label</strong>
        }
        else
        {
            @Model.Label
        }
    </td>
    <td class="govuk-table__cell" data-testid="@idPrefix-current-capacity">@Model.CapacityBuildupEntry.CurrentCapacity</td>
    <td class="govuk-table__cell" data-testid="@idPrefix-first-year">@Model.CapacityBuildupEntry.FirstYear</td>
    <td class="govuk-table__cell" data-testid="@idPrefix-second-year">@Model.CapacityBuildupEntry.SecondYear</td>
    <td class="govuk-table__cell" data-testid="@idPrefix-third-year">@Model.CapacityBuildupEntry.ThirdYear</td>
    <td class="govuk-table__cell" data-testid="@idPrefix-fourth-year">@Model.CapacityBuildupEntry.FourthYear</td>
    <td class="govuk-table__cell" data-testid="@idPrefix-fifth-year">@Model.CapacityBuildupEntry.FifthYear</td>
    <td class="govuk-table__cell" data-testid="@idPrefix-sixth-year">@Model.CapacityBuildupEntry.SixthYear</td>
    <td class="govuk-table__cell" data-testid="@idPrefix-seventh-year">@Model.CapacityBuildupEntry.SeventhYear</td>
</tr>
