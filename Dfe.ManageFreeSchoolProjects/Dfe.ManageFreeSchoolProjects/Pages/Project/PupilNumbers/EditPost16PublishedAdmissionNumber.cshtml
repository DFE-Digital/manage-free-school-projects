@page "/projects/{projectId}/pupil-numbers/post16-published-admission-number/edit"
@using Dfe.ManageFreeSchoolProjects.Constants
@model Dfe.ManageFreeSchoolProjects.Pages.Project.PupilNumbers.EditPost16PublishedAdmissionNumberModel

@{
    var backlink = string.Format(RouteConstants.ViewPupilNumbers, Model.ProjectId);
    ViewData["Title"] = $"Edit Post-16 published admission number (PAN) - {Model.SchoolName}";
}

@section BeforeMain {
    <div role="navigation" class="govuk-width-container">
        <a href=@backlink class="govuk-back-link">Back</a>
    </div>
}

<partial name="_ErrorSummary" />


<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

        <h1 class="govuk-heading-xl">
            <span class="govuk-caption-l" data-testid="school-name">@Model.SchoolName</span>
            Edit Post-16 published admission number (PAN)
        </h1>

        <form class="form" method="post">

            <table class="govuk-table govuk-table__border--full govuk-table--small">
                <caption class="govuk-table__caption govuk-table__caption--m govuk-visually-hidden">Edit Post-16 published admission number (PAN)</caption>
                <thead class="govuk-table__head">
                    <tr class="govuk-table__row">
                        <th scope="col" class="govuk-table__header mfsp-pupil-numbers-table__first-header">School year</th>
                        <th scope="col" class="govuk-table__header">PAN in first year of opening</th>
                    </tr>
                </thead>
                <tbody class="govuk-table__body">
                    <tr class="govuk-table__row">
                        <td class="govuk-table__cell">Year 12</td>
                        <td class="govuk-table__cell">
                            <govuk-number-input-cell id="year12" name="year12" asp-for="@Model.Year12" label="Year 12" />
                        </td>
                    </tr>
                    <tr class="govuk-table__row">
                        <td class="govuk-table__cell">Other post-16</td>
                        <td class="govuk-table__cell">
                            <govuk-number-input-cell id="other-post16" name="other-post16" asp-for="@Model.OtherPost16" label="Other post-16" />

                        </td>
                    </tr>
                </tbody>
            </table>
            <button class="govuk-button" data-module="govuk-button" data-testid="save-and-continue">
                Save and continue
            </button>

            @Html.HiddenFor(m => m.SchoolName)
        </form>
    </div>
</div>
