@page "/projects/{projectId}/risk/add/review"
@using Dfe.ManageFreeSchoolProjects.Pages.Project.Risk;
@using Dfe.ManageFreeSchoolProjects.Constants;
@model AddRiskReviewModel
@{
    ViewData["Title"] = $"Review ratings and summaries - { Model.SchoolName }";
    var backLink = string.Format(RouteConstants.ProjectRiskSummary, Model.ProjectId);
}
@section BeforeMain {
    <div class="govuk-width-container">
        <a href="@backLink" class="govuk-back-link">Back</a>
    </div>
}

<partial name="_ErrorSummary" />

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">
            <span class="govuk-caption-l" data-testid="school-name">@Model.SchoolName</span>
            Review ratings and summaries
        </h1>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <dl class="govuk-summary-list">
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Overall risk rating
                </dt>
                <dd class="govuk-summary-list__value" data-testid="overall-risk-rating">
                    <govuk-risk-rating-label risk-rating="@Model.ProjectRisk.Overall.RiskRating" />
                </dd>

                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link" href="/projects/@Model.ProjectId/risk/add/overall"
                        data-testid="change-overall-risk">
                        Change<span class="govuk-visually-hidden">Overall risk rating</span>
                    </a>
                </dd>
            </div>

            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Overall risk summary
                </dt>
                <dd class="govuk-summary-list__value" data-testid="overall-risk-summary">
                    <govuk-display-value value="@Model.ProjectRisk.Overall.Summary" />
                </dd>

                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link" href="/projects/@Model.ProjectId/risk/add/overall"
                        data-testid="change-overall-risk-summary">
                        Change<span class="govuk-visually-hidden">Overall risk rating</span>
                    </a>
                </dd>

            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Governance and suitability rating
                </dt>
                <dd class="govuk-summary-list__value" data-testid="governance-and-suitability-risk-rating">
                    <govuk-risk-rating-label risk-rating="@Model.ProjectRisk.GovernanceAndSuitability.RiskRating" />
                </dd>

                <dd class="govuk-summary-list__actions">

                    <a class="govuk-link" href="/projects/@Model.ProjectId/risk/add/governance-and-suitability"
                        data-testid="change-governance-and-suitability-risk">
                        Change<span class="govuk-visually-hidden"> Governance and suitability risk rating</span>
                    </a>
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Governance and suitability summary
                </dt>
                <dd class="govuk-summary-list__value" data-testid="governance-and-suitability-risk-summary">
                    <govuk-display-value value="@Model.ProjectRisk.GovernanceAndSuitability.Summary" />
                </dd>

                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link" href="/projects/@Model.ProjectId/risk/add/governance-and-suitability"
                        data-testid="change-governance-and-suitability-summary">
                        Change<span class="govuk-visually-hidden"> Governance and suitability risk rating</span>
                    </a>
                </dd>

            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Education rating
                </dt>
                <dd class="govuk-summary-list__value" data-testid="education-risk-rating">
                    <govuk-risk-rating-label risk-rating="@Model.ProjectRisk.Education.RiskRating" />
                </dd>

                <dd class="govuk-summary-list__actions">

                    <a class="govuk-link" href="/projects/@Model.ProjectId/risk/add/education"
                        data-testid="change-education-risk">
                        Change<span class="govuk-visually-hidden"> Education risk rating</span>
                    </a>

                </dd>

            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Education summary
                </dt>
                <dd class="govuk-summary-list__value" data-testid="education-risk-summary">
                    <govuk-display-value value="@Model.ProjectRisk.Education.Summary" />
                </dd>

                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link" href="/projects/@Model.ProjectId/risk/add/education"
                        data-testid="change-education-summary">
                        Change<span class="govuk-visually-hidden"> Education risk rating</span>
                    </a>
                </dd>

            </div>

            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Finance rating
                </dt>
                <dd class="govuk-summary-list__value" data-testid="finance-risk-rating">
                    <govuk-risk-rating-label risk-rating="@Model.ProjectRisk.Finance.RiskRating" />
                </dd>

                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link" href="/projects/@Model.ProjectId/risk/add/finance"
                        data-testid="change-finance-risk">
                        Change<span class="govuk-visually-hidden"> Finance rating</span>
                    </a>
                </dd>
            </div>

            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Finance summary
                </dt>
                <dd class="govuk-summary-list__value" data-testid="finance-risk-summary">
                    <govuk-display-value value="@Model.ProjectRisk.Finance.Summary" />
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link" href="/projects/@Model.ProjectId/risk/add/finance"
                        data-testid="change-finance-summary">
                        Change<span class="govuk-visually-hidden"> Finance rating</span>
                    </a>
                </dd>

            </div>

            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    RAF SharePoint link
                </dt>
                <dd class="govuk-summary-list__value" data-testid="risk-appraisal-form-sharepoint-link">
                    @if (string.IsNullOrEmpty(Model.ProjectRisk.RiskAppraisalFormSharepointLink))
                    {
                        <span class="empty">Empty</span>
                    }
                    else
                    {
                        <a class="govuk-link" target="_blank" href="@Model.ProjectRisk.RiskAppraisalFormSharepointLink">RAF
                            (risk appraisal form) - open in new tab</a>
                    }
                </dd>

                <dd class="govuk-summary-list__actions">

                    <a class="govuk-link" href="/projects/@Model.ProjectId/risk/add/risk-appraisal-form"
                        data-testid="change-risk-appraisal-form-sharepoint-link">
                        Change<span class="govuk-visually-hidden"> RAF Sharepoint link</span>
                    </a>

                </dd>
            </div>
        </dl>

        <form method="post">
            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                        <div class="govuk-checkboxes__item">
                            <input class="govuk-checkboxes__input" asp-for="RiskReviewed" id="risk-reviewed"
                                data-testid="risk-reviewed" name="risk-reviewed" type="checkbox">
                            <label class="govuk-label govuk-checkboxes__label" for="risk-reviewed">
                                Ratings and summaries reviewed
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>

            <button class="govuk-button" data-module="govuk-button" data-testid="create-risk-entry">
                Confirm
            </button>
        </form>

    </div>
</div>
