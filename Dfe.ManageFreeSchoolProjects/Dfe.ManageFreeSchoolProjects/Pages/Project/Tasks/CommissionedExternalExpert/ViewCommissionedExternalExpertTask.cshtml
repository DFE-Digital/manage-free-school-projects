@page "/projects/{projectId}/tasks/external-expert-visit"
@using Dfe.ManageFreeSchoolProjects.Constants
@model Dfe.ManageFreeSchoolProjects.Pages.Project.Tasks.CommissionedExternalExpert.ViewCommissionedExternalExpertModel
@{
    ViewData["Title"] = $"External expert visit - {Model.Project.SchoolName}";

    var backlink = string.Format(RouteConstants.TaskList, Model.ProjectId);
    var editlink = string.Format(RouteConstants.EditCommissionedExternalExpertTask, Model.ProjectId);
    var commissionedExternalExpert = Model.Project.CommissionedExternalExpert;
    var riskRatingLink = string.Format(RouteConstants.ProjectRiskSummary, Model.ProjectId);
}

@section BeforeMain {
    <div role="navigation" class="govuk-width-container">
        <a href=@backlink class="govuk-back-link">Back</a>
    </div>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl" data-testid="title">
            <span class="govuk-caption-l" data-testid="school-name">
                @Model.Project.SchoolName
            </span>
            External expert visit
        </h1>
        <div class="govuk-inset-text">
                    You need to complete this task if the <a class="govuk-link" href="@riskRatingLink">project's risk rating</a> is amber green and above, or it's the first school to be opened by a trust.
                </div>
            <govuk-summary-list>
                    <govuk-summary-item label="Commissioned an external expert (EE) visit" asp-for="@commissionedExternalExpert.CommissionedExternalExpertVisit" href="@editlink" />
                    <govuk-summary-item label="Date the EE visit took place" asp-for="@commissionedExternalExpert.ExternalExpertVisitDate" href="@editlink" />
                    <govuk-summary-item label="Saved EE specification and report in Workplaces folder" asp-for="@commissionedExternalExpert.SavedExternalExpertSpecsToWorkplacesFolder" href="@editlink" />
                </govuk-summary-list>
        <form method="post">
            <govuk-checkbox-input label="Mark this section as complete, you can still make changes later"
                                  asp-for="MarkAsCompleted"
                                  name="mark-as-completed"
                                  id="mark-as-completed" />

            <button class="govuk-button" data-module="govuk-button" data-testid="confirm">
                Confirm and continue
            </button>

        </form>
    </div>
</div>