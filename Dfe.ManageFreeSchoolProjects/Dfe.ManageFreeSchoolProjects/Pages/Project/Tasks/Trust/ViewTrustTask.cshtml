@page "/projects/{projectId}/tasks/trust"
@using Dfe.ManageFreeSchoolProjects.Constants;
@model Dfe.ManageFreeSchoolProjects.Pages.Project.Tasks.Trust.ViewTrustTaskModel
@{
    ViewData["Title"] = $"Trust - {Model.CurrentFreeSchoolName}";
    var searchLink = string.Format(RouteConstants.SearchTrustTask, Model.ProjectId);
    var backlink = string.Format(RouteConstants.TaskList, Model.ProjectId);
}
<a href=@backlink class="govuk-back-link">Back</a>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

        <h1 class="govuk-heading-xl">
            <span class="govuk-caption-l">@Model.CurrentFreeSchoolName</span>
            Trust
        </h1>
        <dl class="govuk-summary-list">

            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    TRN (trust reference number)
                </dt>
                <dd class="govuk-summary-list__value">
                    @{
                        RenderValue(Model.Project.Trust.TRN);
                    }
                </dd>

                <dd class="govuk-summary-list__actions">

                    <a class="govuk-link" href="@searchLink">
                        Change<span class="govuk-visually-hidden"> TRN</span>
                    </a>

                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Trust name
                </dt>
                <dd class="govuk-summary-list__value">
                    @{
                        RenderValue(Model.Project.Trust.TrustName);
                    }
                </dd>

            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Trust type
                </dt>
                <dd class="govuk-summary-list__value">
                    @{
                        RenderValue(Model.Project.Trust.TrustType.ToDescription());
                    }
                </dd>

            </div>
        </dl>
        <form method="post">
            <div class="govuk-form-group">
                <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                    <div class="govuk-checkboxes__item">
                        <input class="govuk-checkboxes__input" asp-for="MarkAsCompleted" type="checkbox" id="mark-as-complete" data-testid="mark-as-complete">
                        <label class="govuk-label govuk-checkboxes__label" for="mark-as-complete">
                            Mark this section as complete, you can still make changes later
                        </label>
                    </div>
                </div>

            </div>

            <button class="govuk-button" data-module="govuk-button">
                Confirm and continue
            </button>
        </form>

    </div>
</div>

@functions {
    public void RenderValue(string value)
    {
        if (string.IsNullOrEmpty(value))
        {
            <span class="empty">Empty</span>
        }
        else
        {
            @value
        }
    }
}