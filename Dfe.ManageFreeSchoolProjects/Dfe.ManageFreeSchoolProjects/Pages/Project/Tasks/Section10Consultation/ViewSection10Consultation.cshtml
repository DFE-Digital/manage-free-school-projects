@page "/projects/{projectId}/tasks/section10consultation"
@using Dfe.ManageFreeSchoolProjects.Constants;
@using Dfe.ManageFreeSchoolProjects.API.Contracts.Project.Tasks
@using Dfe.ManageFreeSchoolProjects.Pages.Project.Tasks.Section10Consultation
@model Dfe.ManageFreeSchoolProjects.Pages.Project.Tasks.Section10Consultation.ViewSection10ConsultationTask
@{
    ViewData["Title"] = $"Section 10 consultation - {Model.Project.SchoolName}";

    var backlink = string.Format(RouteConstants.TaskList, Model.ProjectId);
    var editlink = string.Format(RouteConstants.EditSection10Consultation, Model.ProjectId);
    var section10consultation = Model.Project.Section10Consultation;
}

@section BeforeMain {
    <div role="navigation" class="govuk-width-container">
        <a href=@backlink class="govuk-back-link">Back</a>
    </div>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl" data-testid="title">
            <span class="govuk-caption-l" data-testid="school-name">
                @Model.Project.SchoolName
            </span>
            Section 10 consultation
        </h1>
        <govuk-summary-list>
            <govuk-summary-item label="Expected date for receiving findings from trust" asp-for="@section10consultation.ExpectedDateForReceivingFindingsFromTrust" href="@editlink" />
            <govuk-summary-item label="Received consultation findings from trust" asp-for="@section10consultation.ReceivedConsultationFindingsFromTrust" href="@editlink" />
            <govuk-summary-item label="Date received" asp-for="@section10consultation.DateReceived" href="@editlink" />
            <govuk-summary-item label="Consultation fulfils the trust's section 10 statutory duty" asp-for="@section10consultation.ConsultationFulfilsTrustSection10StatutoryDuty" href="@editlink" />
            <govuk-summary-item label="Comments" asp-for="@section10consultation.Comments" href="@editlink" />
            <govuk-summary-item label="Saved findings in Workplaces folder" asp-for="@section10consultation.SavedFindingsInWorkplacesFolder" href="@editlink" render-link="true" />
        </govuk-summary-list>

        <form method="post">
            <govuk-checkbox-input label="Mark this section as complete, you can still make changes later"
                                  asp-for="MarkAsCompleted"
                                  name="mark-as-completed"
                                  id="mark-as-completed" />
            <button class="govuk-button" data-module="govuk-button" data-testid="confirm">
                Confirm and continue
            </button>
        </form>
    </div>
</div>