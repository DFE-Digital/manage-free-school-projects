@page "/projects/{projectId}/tasks/funding-agreement-health-check"
@using Dfe.ManageFreeSchoolProjects.API.Contracts.Common
@using Dfe.ManageFreeSchoolProjects.Constants
@model Dfe.ManageFreeSchoolProjects.Pages.Project.Tasks.FundingAgreementHealthCheck.ViewFundingAgreementHealthCheckTaskModel;
@{
    ViewData["Title"] = $"Funding agreement health check - {Model.Project.SchoolName}";

    var backlink = string.Format(RouteConstants.TaskList, Model.ProjectId);
    var editlink = string.Format(RouteConstants.EditFundingAgreementHealthCheckTask, Model.ProjectId);
    var fahealthcheck = Model.Project.FundingAgreementHealthCheck;
}
@section BeforeMain {
    <div role="navigation" class="govuk-width-container msfp-wider-page">
        <a href=@backlink class="govuk-back-link">Back</a>
    </div>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl" data-testid="title">
            <span class="govuk-caption-l" data-testid="school-name">
                @Model.Project.SchoolName
            </span>
            Funding agreement health check
        </h1>
        <govuk-summary-list>
            <govuk-summary-item label="Drafted a funding agreement (FA) health check" asp-for="@fahealthcheck.DraftedFundingAgreementHealthCheck" href="@editlink" />
            <govuk-summary-item label="Regional Director has signed-off the FA health check (if applicable)" asp-for="@fahealthcheck.RegionalDirectorSignedOffFundingAgreementHealthCheck" href="@editlink" />
            <govuk-summary-item label="Minister has signed-off the FA health check (if applicable)" asp-for="@fahealthcheck.MinisterSignedOffFundingAgreementHealthCheck" href="@editlink" />
            <govuk-summary-item label="Saved the health check in Workplaces folder" asp-for="@fahealthcheck.SavedFundingAgreementHealthCheckInWorkplacesFolder" href="@editlink" />
        </govuk-summary-list>
        <form method="post">
            <govuk-checkbox-input label="Mark this section as complete, you can still make changes later"
                                  asp-for="MarkAsCompleted"
                                  name="mark-as-completed"
                                  id="mark-as-completed" />
            <button class="govuk-button" data-module="govuk-button" data-testid="confirm">
                Confirm and continue
            </button>
        </form>
    </div>
</div>
