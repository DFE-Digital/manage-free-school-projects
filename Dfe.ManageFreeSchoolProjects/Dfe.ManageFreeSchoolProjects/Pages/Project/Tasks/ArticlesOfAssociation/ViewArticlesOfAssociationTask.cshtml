@page "/projects/{projectId}/tasks/articlesofassociation"
@using Dfe.ManageFreeSchoolProjects.Constants;
@model Dfe.ManageFreeSchoolProjects.Pages.Project.Tasks.ArticlesOfAssociation.ViewArticlesOfAssociationTask
@{
    ViewData["Title"] = $"Articles of association - {Model.Project.SchoolName}";

    var backlink = string.Format(RouteConstants.TaskList, Model.ProjectId);
    var editlink = string.Format(RouteConstants.EditArticlesOfAssociation, Model.ProjectId);
    var articles = Model.Project.ArticlesOfAssociation;
}
@section BeforeMain {
    <div role="navigation" class="govuk-width-container">
        <a href=@backlink class="govuk-back-link">Back</a>
    </div>
}
    
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl" data-testid="title">
            <span class="govuk-caption-l" data-testid="school-name">
                @Model.Project.SchoolName
            </span>
            Articles of association
        </h1>
        <govuk-summary-list>
            <govuk-summary-item label="Checked that the submitted articles match the model articles" asp-for="@articles.CheckedSubmittedArticlesMatch" href="@editlink" />
            <govuk-summary-item label="Chair of trustees and senior executive lead have submitted confirmation" asp-for="@articles.ChairHaveSubmittedConfirmation" href="@editlink" />
            <govuk-summary-item label="Governance arrangements match the details given in governance plans" asp-for="@articles.ArrangementsMatchGovernancePlans" href="@editlink" />
            <govuk-summary-item label="Forecast date" asp-for="@articles.ForecastDate" href="@editlink" />
            <govuk-summary-item label="Actual date" asp-for="@articles.ActualDate" href="@editlink" />
            <govuk-summary-item label="Comments on decision to approve (if applicable)" asp-for="@articles.CommentsOnDecision" href="@editlink" />
            <govuk-summary-item label="Sharepoint link" asp-for="@articles.SharepointLink" href="@editlink" render-link="true" />
        </govuk-summary-list>
        <form method="post">
            <div class="govuk-form-group">
                <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                    <div class="govuk-checkboxes__item">
                        <input class="govuk-checkboxes__input" asp-for="MarkAsCompleted" type="checkbox" id="mark-as-complete" data-testid="mark-as-complete">
                        <label class="govuk-label govuk-checkboxes__label" for="mark-as-complete">
                            Mark this section as complete, you can still make changes later
                        </label>
                    </div>
                </div>
            </div>
            <button class="govuk-button" data-module="govuk-button" data-testid="confirm">
                Confirm and continue
            </button>
        </form>
    </div>
</div>