@page "/projects/{projectId}/tasks/risk-appraisal-meeting"
@using Dfe.ManageFreeSchoolProjects.Constants;
@model Dfe.ManageFreeSchoolProjects.Pages.Project.Tasks.RiskAppraisalMeeting.ViewRiskAppraisalMeetingTaskModel
@{
    ViewData["Title"] = $"Risk appraisal meeting - {Model.CurrentFreeSchoolName}";
    var editLink = string.Format(RouteConstants.EditRiskAppraisalMeetingTask, Model.ProjectId);
    var backLink = string.Format(RouteConstants.TaskList, Model.ProjectId);
}

@section BeforeMain {
    <div role="navigation" class="govuk-width-container msfp-wider-page">
        <a href=@backLink class="govuk-back-link">Back</a>
    </div>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

        <h1 class="govuk-heading-xl">
            <span class="govuk-caption-l">@Model.CurrentFreeSchoolName</span>
            Risk appraisal meeting
        </h1>
        <dl class="govuk-summary-list">

            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Initial risk appraisal meeting completed
                </dt>
                <dd class="govuk-summary-list__value">
                    @{
                        RenderValue(Model.Project.RiskAppraisalMeeting.InitialRiskAppraisalMeetingCompleted.ToYesNoString());
                    }
                </dd>

                <dd class="govuk-summary-list__actions">

                    <a class="govuk-link" href="@editLink">
                        Change<span class="govuk-visually-hidden"> Initial risk appraisal meeting completed</span>
                    </a>

                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Forecast date
                </dt>
                <dd class="govuk-summary-list__value">
                    @{
                        RenderValue(Model.Project.RiskAppraisalMeeting.ForecastDate.ToDateString());
                    }
                </dd>

                <dd class="govuk-summary-list__actions">

                    <a class="govuk-link" href="@editLink">
                        Change<span class="govuk-visually-hidden"> Forecast date</span>
                    </a>

                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Actual date
                </dt>
                <dd class="govuk-summary-list__value">
                    @{
                        RenderValue(Model.Project.RiskAppraisalMeeting.ActualDate.ToDateString());
                    }
                </dd>

                <dd class="govuk-summary-list__actions">

                    <a class="govuk-link" href="@editLink">
                        Change<span class="govuk-visually-hidden"> Actual date</span>
                    </a>

                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Comments on decision to approve (if applicable)
                </dt>
                <dd class="govuk-summary-list__value">
                    @{
                        RenderValue(Model.Project.RiskAppraisalMeeting.CommentsOnDecisionToApprove);
                    }
                </dd>

                <dd class="govuk-summary-list__actions">

                    <a class="govuk-link" href="@editLink">
                        Change<span class="govuk-visually-hidden"> Comments on decision to approve (if applicable)</span>
                    </a>

                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Reason not applicable
                </dt>
                <dd class="govuk-summary-list__value">
                    @{
                        RenderValue(Model.Project.RiskAppraisalMeeting.ReasonNotApplicable);
                    }
                </dd>

                <dd class="govuk-summary-list__actions">

                    <a class="govuk-link" href="@editLink">
                        Change<span class="govuk-visually-hidden"> Reason not applicable</span>
                    </a>

                </dd>
            </div>

        </dl>
        <form method="post">
            <div class="govuk-form-group">
                <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                    <div class="govuk-checkboxes__item">
                        <input class="govuk-checkboxes__input" asp-for="MarkAsCompleted" type="checkbox" id="mark-as-complete" data-testid="mark-as-complete">
                        <label class="govuk-label govuk-checkboxes__label" for="mark-as-complete">
                            Mark this section as complete, you can still make changes later
                        </label>
                    </div>
                </div>

            </div>

            <button class="govuk-button" data-module="govuk-button">
                Confirm and continue
            </button>
        </form>

    </div>
</div>

@functions {
    public void RenderValue(string value)
    {
        if (string.IsNullOrEmpty(value))
        {
            <span class="empty">Empty</span>
        }
        else
        {
            @value
        }
    }
}