@page "/projects/{projectId}/tasks/accepted-offers-evidence/edit"
@using Dfe.ManageFreeSchoolProjects.Constants
@model Dfe.ManageFreeSchoolProjects.Pages.Project.Tasks.AcceptedOffersEvidence.EditAcceptedOffersEvidenceTaskModel
@{
    ViewData["Title"] = $"Edit Accepted offers evidence - {Model.SchoolName}";

    var backlink = string.Format(RouteConstants.ViewAcceptedOffersEvidenceTask, Model.ProjectId);
}

@section BeforeMain {
    <div role="navigation" class="govuk-width-container msfp-wider-page">
        <a href=@backlink class="govuk-back-link">Back</a>
    </div>
}

<partial name="_ErrorSummary" />

<h1 class="govuk-heading-xl" data-testid="title">
    <span class="govuk-caption-l" data-testid="school-name">@Model.SchoolName</span>
    Edit Accepted offers evidence 
</h1>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <form method="post">
            <govuk-checkbox-input label="Seen evidence of accepted offers"
                                  asp-for="@Model.SeenAcceptedOffersEvidence"
                                  name="seen-accepted-offers-evidence"
                                  id="seen-accepted-offers-evidence"
                                  add-margin=false />

            <govuk-textarea-input id="comments" name="comments" bold-label="true" label="Comments" rows="5" asp-for="@Model.Comments" add-margin="true" hint="For example, about any changes to accepted offer numbers" />

            <govuk-checkbox-input label="Saved email from the trust in Workplaces folder confirming accepted offers"
                                  asp-for="@Model.SavedToWorkplaces"
                                  name="saved-to-workplaces"
                                  id="saved-to-workplaces"
                                  add-margin="false"/>
            
            <button class="govuk-button" data-module="govuk-button" data-testid="continue">
                Save and continue
            </button>
        </form>
    </div>
</div>