@page "/projects/{projectId}/tasks/accepted-offers-evidence"
@using Dfe.ManageFreeSchoolProjects.Constants
@model Dfe.ManageFreeSchoolProjects.Pages.Project.Tasks.AcceptedOffersEvidence.ViewAcceptedOffersEvidenceModel
@{
    ViewData["Title"] = $"Accepted offers evidence - {Model.Project.SchoolName}";

    var backlink = string.Format(RouteConstants.TaskList, Model.ProjectId);
    var editlink = string.Format(RouteConstants.EditAcceptedOffersEvidenceTask, Model.ProjectId);
    var acceptedOffersEvidence = Model.Project.EvidenceOfAcceptedOffers;
}

@section BeforeMain {
    <div role="navigation" class="govuk-width-container">
        <a href=@backlink class="govuk-back-link">Back</a>
    </div>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl" data-testid="title">
            <span class="govuk-caption-l" data-testid="school-name">
                @Model.Project.SchoolName
            </span>
            Accepted offers evidence
        </h1>
            <govuk-summary-list>
                    <govuk-summary-item label="Seen evidence of accepted offers" asp-for="@acceptedOffersEvidence.EvidenceOfAcceptedOffers" href="@editlink" />
                    <govuk-summary-item label="Comments" asp-for="@acceptedOffersEvidence.Comments" href="@editlink" />
                    <govuk-summary-item label="Saved email from the trust in Workplaces folder confirming accepted offers" asp-for="@acceptedOffersEvidence.SavedToWorkplaces" href="@editlink" />
                </govuk-summary-list>
        <form method="post">
            <govuk-checkbox-input label="Mark this section as complete, you can still make changes later"
                                  asp-for="MarkAsCompleted"
                                  name="mark-as-completed"
                                  id="mark-as-completed" />

            <button class="govuk-button" data-module="govuk-button" data-testid="confirm">
                Confirm and continue
            </button>

        </form>
    </div>
</div>