@page "/projects/{projectId}/tasks/dates/edit"
@model Dfe.ManageFreeSchoolProjects.Pages.Project.Tasks.Dates.EditPropertyTaskModel
@{
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

        <h1 class="govuk-heading-xl">
            <span class="govuk-caption-l">St George's Primary School</span>
            Edit dates
        </h1>

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <form method="post">

                    <govuk-text-input id="entry-into-pre-opening" name="entry-into-pre-opening" asp-for="@Model.EntryIntoPreOpening" data-testid="entry-into-pre-opening" label="Entry into pre-opening" />
                    <govuk-text-input id="provisional-opening-date-agreed-with-trust" name="provisional-opening-date-agreed-with-trust" asp-for="@Model.ProvisionalOpeningDateAgreedWithTrust" data-testid="provisional-opening-date-agreed-with-trust" label="Provisional opening date agreed with trust" />
                    <govuk-text-input id="opening-academic-year" name="opening-academic-year" asp-for="@Model.OpeningAcademicYear" data-testid="opening-academic-year" label="Opening academic year" />

                    <button class="govuk-button" data-module="govuk-button">
                        Save and continue
                    </button>
                </form>

            </div>
        </div>
    </div>
</div>