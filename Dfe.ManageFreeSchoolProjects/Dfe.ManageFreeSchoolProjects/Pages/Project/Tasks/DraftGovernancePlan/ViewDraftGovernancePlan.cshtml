@page "/projects/{projectId}/tasks/draft-governance-plan"
@using Dfe.ManageFreeSchoolProjects.Constants
@model Dfe.ManageFreeSchoolProjects.Pages.Project.Tasks.DraftGovernancePlan.ViewDraftGovernancePlanModel
@{
    ViewData["Title"] = $"Draft governance plans - {Model.Project.SchoolName}";

    var backlink = string.Format(RouteConstants.TaskList, Model.ProjectId);
    var editlink = string.Format(RouteConstants.EditDraftGovernancePlanTask, Model.ProjectId);
    var draftGovernancePlan = Model.Project.DraftGovernancePlan;
}

@section BeforeMain {
    <div role="navigation" class="govuk-width-container msfp-wider-page">
        <a href=@backlink class="govuk-back-link">Back</a>
    </div>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl" data-testid="title">
            <span class="govuk-caption-l" data-testid="school-name">
                @Model.Project.SchoolName
            </span>
            Draft governance plans
        </h1>
        <govuk-summary-list>
            <govuk-summary-item label="Forecast date" asp-for="@draftGovernancePlan.ForecastDate" href="@editlink" />
            <govuk-summary-item label="Actual date" asp-for="@draftGovernancePlan.ActualDate" href="@editlink" />
            <govuk-summary-item label="Comments on decision to approve (if applicable)" asp-for="@draftGovernancePlan.CommentsOnDecisionToApprove" href="@editlink" />
            <govuk-summary-item label="SharePoint link" asp-for="@draftGovernancePlan.SharepointLink" href="@editlink" />
        </govuk-summary-list>
        <form method="post">
            <govuk-checkbox-input label="Mark this section as complete, you can still make changes later"
                                  asp-for="MarkAsCompleted"
                                  name="mark-as-completed"
                                  id="mark-as-completed" />
            <button class="govuk-button" data-module="govuk-button" data-testid="confirm">
                Confirm and continue
            </button>
        </form>
    </div>
</div>