@page "/projects/{projectId}/contacts/other-info-contacts-multi-academy-project-managed-by-edit"
@using Dfe.ManageFreeSchoolProjects.Pages.Project.Contacts;
@using Dfe.ManageFreeSchoolProjects.Constants;
@model EditProjectManagedByContactModel


@{
    ViewData["Title"] = $"Edit Project managed by";
    var backLink = string.Format(RouteConstants.ViewContacts, Model.ProjectId);
    
}

<partial name="_ErrorSummary" />

@section BeforeMain {
    <div class="govuk-width-container">
        <a href="@backLink" class="govuk-back-link">Back to contacts summary</a>
    </div>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl" data-testid="edit-project-managed-by-title">
              <span class="govuk-caption-l" data-testid="school-name">@Model.SchoolName</span>
            @ViewData["Title"]
        </h1>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <form class="form" method="post">

            <label class="govuk-label govuk-heading-m" for="project-managed-by-name">
            Name
            </label>

            <govuk-text-input 
                id="project-managed-by-name" 
                name="project-managed-by-name" 
                asp-for="@Model.PageContacts.Contacts.ProjectManagedBy.Name" 
                test-id="edit-project-managed-by-name"
                />
            
             <label class="govuk-label govuk-heading-m" for="project-managed-by-email">
                            Email
                        </label>
                        <govuk-text-input 
                            id="project-managed-by-email" 
                            name="project-managed-by-email" 
                            asp-for="@Model.PageContacts.Contacts.ProjectManagedBy.Email" 
                            test-id="edit-project-managed-by-email"
                            />
            <button class="govuk-button" data-module="govuk-button" data-testid="continue">
                Save and continue
            </button>
        </form>
    </div>
</div>