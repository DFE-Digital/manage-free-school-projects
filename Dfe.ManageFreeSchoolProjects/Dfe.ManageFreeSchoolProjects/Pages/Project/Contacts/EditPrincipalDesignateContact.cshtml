@page "/projects/{projectId}/contacts/principal-designate-contact-edit"
@using Dfe.ManageFreeSchoolProjects.Pages.Project.Contacts;
@using Dfe.ManageFreeSchoolProjects.Constants;
@model EditPrincipalDesignateContactModel


@{
    ViewData["Title"] = $"Edit Principal designate contact";
    var backLink = string.Format(RouteConstants.Contacts, Model.ProjectId);
    
}

<partial name="_ErrorSummary" />

@section BeforeMain {
    <div class="govuk-width-container">
        <a href="@backLink" class="govuk-back-link">Back to contacts summary</a>
    </div>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full" data-testid="edit-principal-designate-contact-title">
        <span class="govuk-caption-l" data-testid="school-name">@Model.SchoolName</span>
        <h1 class="govuk-heading-xl">
            @ViewData["Title"]
        </h1>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <form class="form" method="post">

            <label class="govuk-label govuk-heading-m" for="principal-designate-contact-name">
            Name
            </label>

            <govuk-text-input 
                id="principal-designate-contact-name"
                name="principal-designate-contact-name"
                asp-for="@Model.PageContacts.Contacts.PrincipalDesignate.Name"
                test-id="edit-principal-designate-contact-name" />
            
             <label class="govuk-label govuk-heading-m" for="principal-designate-contact-email">
            Email
            </label>
            <govuk-text-input id="principal-designate-contact-email"
                name="principal-designate-contact-email"
                asp-for="@Model.PageContacts.Contacts.PrincipalDesignate.Email"
                test-id="edit-principal-designate-contact-email" />

            <button class="govuk-button" data-module="govuk-button" data-testid="continue">
                Save and continue
            </button>

        </form>
    </div>
</div>