@page "/project/create/forms-of-entry"
@model Dfe.ManageFreeSchoolProjects.Pages.Project.Create.Individual.FormsOfEntryModel

@{
    ViewData["Title"] = "How many forms of entry are there?";
}

@section BeforeMain {
    <div role="navigation" class="govuk-width-container msfp-wider-page">
        <a href="@Model.BackLink" class="govuk-back-link" data-testid="back">Back</a>
    </div>
}

<div class="govuk-grid-row">
    <partial name="_ErrorSummary"/>
    <div class="govuk-grid-column-two-thirds">
        <form class="form" method="post">
            <govuk-create-title label="How many forms of entry are there?" for="forms-of-entry" />
            <div class="govuk-form-group">
                <govuk-textarea-input name="forms-of-entry" rows="5" asp-for="@Model.FormsOfEntry" data-testid="forms-of-entry" hint="For example, 3 in primary and 6 in secondary" />
            </div>

            <button class="govuk-button" data-module="govuk-button" data-testid="continue">
                Continue
            </button>
        </form>
    </div>
</div>