@page "/project/create/provisional-opening-date"
@model Dfe.ManageFreeSchoolProjects.Pages.Project.Create.ProvisionalOpeningDateModel
@{
    ViewData["Title"] = "What is the provisional opening date?";

}
@section BeforeMain {
    <div role="navigation" class="govuk-width-container msfp-wider-page">
        <a href=@Model.BackLink class="govuk-back-link">Back</a>
    </div>
}

<div class="govuk-grid-row">
    <partial name="_ErrorSummary" />
    <div class="govuk-grid-column-two-thirds">
        <form class="form" method="post">

            <div class="govuk-form-group">
                <h1 class="govuk-label-wrapper">
                    <label class="govuk-label govuk-label--xl" for="provisional-opening-date">
                        <span class="govuk-caption-l">Creating a new free school project</span>
                        What is the provisional opening date?
                    </label>
                </h1>
                <govuk-date-input id="provisional-opening-date" name="provisional-opening-date" asp-for="@Model.ProvisionalOpeningDate" data-testid="provisional-opening-date" hint="For example, 1 9 2023"/>
            </div>

            <button class="govuk-button" data-module="govuk-button" data-testid="continue">
                Continue
            </button>
        </form>
    </div>
</div>