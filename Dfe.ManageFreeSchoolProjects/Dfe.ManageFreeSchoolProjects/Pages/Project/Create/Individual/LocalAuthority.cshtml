@page "/project/create/localauthority"
@model Dfe.ManageFreeSchoolProjects.Pages.Project.Create.LocalAuthorityModel
@{
    ViewData["Title"] = "What is the local authority?";
    var localAuthorities = Model.LocalAuthorities.ToArray();
}

@section BeforeMain {
    <div role="navigation" class="govuk-width-container">
        <a href="@Model.BackLink" class="govuk-back-link" data-testid="back">Back</a>
    </div>
}

<div class="govuk-form-group">
    <partial name="_ErrorSummary"/>
    <govuk-create-title label="What is the local authority?" add-margin="true"/>
    <form method="post">
            <govuk-radios-input id="local-authority"
                asp-for="@Model.LocalAuthority"
                name="local-authority"
                data-testid="local-authority"
                labels="localAuthorities"
                values="localAuthorities"/>
        <br/>
        <button class="govuk-button" data-module="govuk-button" data-testid="continue">
            Continue
        </button>
    </form>
</div>